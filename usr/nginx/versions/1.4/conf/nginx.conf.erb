error_log  <%= ENV['OPENSHIFT_IPYTHON_NOTEBOOK_DIR'] %>logs/error.log;
pid        <%= ENV['OPENSHIFT_IPYTHON_NOTEBOOK_DIR'] %>run/nginx.pid;

worker_processes 1;

events {
    worker_connections  1024;
    accept_mutex off;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    client_body_temp_path  <%= ENV['OPENSHIFT_TMP_DIR'] %>client_temp;
    proxy_temp_path        <%= ENV['OPENSHIFT_TMP_DIR'] %>proxy_temp;
    fastcgi_temp_path      <%= ENV['OPENSHIFT_TMP_DIR'] %>fastcgi_temp;
    uwsgi_temp_path        <%= ENV['OPENSHIFT_TMP_DIR'] %>uwsgi_temp;
    scgi_temp_path         <%= ENV['OPENSHIFT_TMP_DIR'] %>scgi_temp;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  <%= ENV['OPENSHIFT_IPYTHON_NOTEBOOK_DIR'] %>logs/access.log  main;

    sendfile  on;
    gzip      on;

    keepalive_timeout  65;


    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }

    server {
        listen  <%= ENV['OPENSHIFT_IPYTHON_NOTEBOOK_IP'] %>:15000;
        root    <%= ENV['OPENSHIFT_REPO_DIR'] %>public;

        server_name ipython_notebook;
        keepalive_timeout 5;

        # haproxy health checks don't send any http_host headers
        # so we set the Host header to the app DNS if the header is empty.
        # This is needed for frameworks that validate the Host header such as Django.
        set $_host $http_host;
        if ($http_host = "") {
            set $_host "<%= ENV['OPENSHIFT_APP_DNS'] %>";
        }

        location / {
            try_files $uri @proxy_to_app;
        }

        location @proxy_to_app {
            # websocket support
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;

            proxy_set_header Host $_host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_redirect off;

            # the upstream 'appserver' always points to the selected python server
            proxy_pass http://appserver;
        }
    }

    include  <%= ENV['OPENSHIFT_IPYTHON_NOTEBOOK_DIR'] %>conf/nginx.appserver.conf;
    include  <%= ENV['OPENSHIFT_IPYTHON_NOTEBOOK_DIR'] %>conf/nginx.server.conf;
}
